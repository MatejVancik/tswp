<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true"><shape android:shape="oval">
            <solid android:color="@color/HoloBlueDark" />

            <size android:height="100dp" android:width="100dp" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="oval">
            <solid android:color="@color/HoloBlueDark" />

            <size android:height="100dp" android:width="100dp" />
        </shape></item>
    <item android:state_pressed="false"><shape android:shape="oval">
            <solid android:color="@color/HoloBlue" />

            <size android:height="100dp" android:width="100dp" />
        </shape></item>
    <item android:state_enabled="false"><shape android:shape="oval">
            <solid android:color="@color/gray_dark" />

            <size android:height="100dp" android:width="100dp" />
        </shape></item>

</selector>