<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/class_item_mark_layout"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="0" >

        <View
            android:id="@+id/class_item_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:background="@color/gray_total" />

        <ImageView
            android:id="@+id/class_item_mark"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/circle_gray" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/class_item_day_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:visibility="gone" >

            <TextView
                android:id="@+id/class_item_day_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pondelok"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/HoloBlue"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/HoloBlue" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/card"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/class_item_button"
                android:orientation="vertical"
                android:paddingRight="10dp" >
                
                <TextView
                    android:id="@+id/class_item_class_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Prednáška"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/class_item_text1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="Modelovanie a generovanie softvérových architektúr"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="0"
                    android:background="@color/gray_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="bottom" >

                    <TextView
                        android:id="@+id/class_item_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lines="1"
                        android:text="L9-B_P25"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/class_item_text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:lines="1"
                        android:text="14:15"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/class_item_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_green_selector"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/vv" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>